<?xml version="1.0" encoding="utf-8"?>
<TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center">
  </TableRow>
  <TableRow android:id="@+id/tableRow6" android:layout_height="wrap_content" android:layout_width="fill_parent">

      <TableLayout
          android:id="@+id/tableLayout1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="2dp" >

          <TableRow
              android:id="@+id/tableRow2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" >

              <TextView
                  android:id="@+id/textView25"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/itemhead"
                  android:textAppearance="?android:attr/textAppearanceMedium" />

              <TextView
                  android:id="@+id/tvItemName"
                  android:layout_width="240dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="5dp"
                  android:text="ItemName"
                  android:textAppearance="?android:attr/textAppearanceSmall" />
          </TableRow>

          <TableRow
              android:id="@+id/tableRow3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" >

              <TextView
                  android:id="@+id/textView22"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/categoryhead"
                  android:textAppearance="?android:attr/textAppearanceMedium" />

              <TextView
                  android:id="@+id/tvCategory"
                  android:layout_width="240dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="5dp"
                  android:text="itemCategory"
                  android:textAppearance="?android:attr/textAppearanceSmall" />
          </TableRow>

          <TableRow
              android:id="@+id/tableRow4"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" >

              <TextView
                  android:id="@+id/textView28"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:text="@string/stock"
                  android:textAppearance="?android:attr/textAppearanceMedium" />

              <TextView
                  android:id="@+id/tvItemStock"
                  android:layout_width="90dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="5dp"
                  android:gravity="center_vertical"
                  android:text="ItemStock"
                  android:textAppearance="?android:attr/textAppearanceSmall" />
          </TableRow>

          <TableRow
              android:id="@+id/tableRow5"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" >

              <TextView
                  android:id="@+id/textView27"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:text="@string/pricehead"
                  android:textAppearance="?android:attr/textAppearanceMedium" />

              <TextView
                  android:id="@+id/tvItemPrice"
                  android:layout_width="90dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="5dp"
                  android:gravity="center_vertical"
                  android:text="ItemPrice"
                  android:textAppearance="?android:attr/textAppearanceSmall" />
          </TableRow>

      </TableLayout>

  </TableRow>

  <TableRow android:id="@+id/tableRow8" android:layout_height="wrap_content" android:layout_width="fill_parent" android:baselineAligned="true" android:gravity="center" android:layout_marginTop="10dp">

      <ImageView
          android:id="@+id/ivItemImage"
          android:layout_width="200dp"
          android:layout_height="170dp"
          android:contentDescription="Product image" >

</ImageView>
  </TableRow>

  <TableRow
      android:id="@+id/tableRow9"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" >

      <TextView
          android:id="@+id/textView26"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="2dp"
          android:text="@string/description"
          android:textAppearance="?android:attr/textAppearanceMedium" >
</TextView>
  </TableRow>

  <TableRow
      android:id="@+id/tableRow10"
      android:layout_width="fill_parent"
      android:layout_height="60dp"
      android:gravity="fill_horizontal" >

      <TextView
          android:id="@+id/tvItemDesc"
          android:layout_width="fill_parent"
          android:layout_height="60dp"
          android:layout_gravity="fill"
          android:text="DescriptionText"
          android:textAppearance="?android:attr/textAppearanceSmall" >
</TextView>
  </TableRow>

  <Button
      android:id="@+id/btClose"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:text="@string/close" />
          
</TableLayout>
